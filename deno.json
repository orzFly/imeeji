{
  "name": "@orz/imeeji",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "publish": {
    "include": ["src/", "deno.json", "README.md", "LICENSE"],
    "exclude": ["src/*_test.ts"]
  },
  "permissions": {
    "default": {
      "net": true,
      "read": true,
      "write": true,
      "env": true
    }
  },
  "test": {
    "permissions": {
      "net": true,
      "read": true,
      "write": true,
      "env": true
    }
  },
  "tasks": {
    "dev": "deno run --watch src/main.ts",
    "test": "deno test -P src/",
    "build": "deno bundle --external react-devtools-core src/main.ts > dist/imeeji.js && sed -i 's/import devtools from \"react-devtools-core\";/const devtools = { initialize: () => {}, connectToDevTools: () => {} };/' dist/imeeji.js"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.27",
    "@std/semver": "jsr:@std/semver@^1.0.8",
    "@types/react": "npm:@types/react@^19",
    "ignore": "npm:ignore@^7.0.5",
    "ignore-walk": "npm:ignore-walk@^8.0.0",
    "react": "npm:react@^19",
    "react/jsx-runtime": "npm:react@^19/jsx-runtime",
    "ink": "npm:ink@^6",
    "terminal-size": "npm:terminal-size@^4.0.1"
  }
}
